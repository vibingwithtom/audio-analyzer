{
  "name": "@audio-analyzer/desktop",
  "version": "1.0.0",
  "description": "Desktop audio analyzer application built with Electron",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build",
    "clean": "rimraf dist build"
  },
  "dependencies": {
    "@audio-analyzer/core": "^1.0.0",
    "dotenv": "^17.2.3",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.0.1"
  },
  "build": {
    "appId": "com.vibingwithtom.audio-analyzer",
    "productName": "Audio Analyzer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "renderer/**/*",
      "node_modules/**/*",
      "!node_modules/.cache"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.music",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "vibingwithtom",
      "repo": "audio-analyzer-extension"
    }
  },
  "keywords": [
    "electron",
    "audio",
    "analyzer",
    "desktop"
  ],
  "author": "vibingwithtom",
  "license": "MIT"
}
